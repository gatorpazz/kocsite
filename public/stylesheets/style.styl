@import "components/normalize"
@import "components/header"

.container
  max-width: 1200px;
  padding: 0 15px;
  margin: 0 auto;
  width: 100%
body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background: url('/images/crucifix.jpg') center/cover no-repeat
  display: flex
  min-height: 100vh
  flex-direction: column
h1
  text-align: center
a
  color: #00B7FF
header, footer
  background: black
  height: 50px
main
  flex: 1
  color: white
footer
  color: white
  p
    text-align: right
    max-width: 1200px
    margin: 0 auto
    padding: 15px

//STYLES FOR OFFICERS PAGE
.pictures
  display: flex
  justify-content: space-between
  flex-wrap: wrap
  figure
    img
      width: 280px
    p
      text-align: center
      &:first-child
        font-size: 20px
      &:nth-child(2)
        font-size: 16px
